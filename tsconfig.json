{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": [
    "src/server.ts",
    "src/app.ts",
    "src/db.ts",
    "src/controllers/**",
    "src/models/**",
    "src/routes/**",
    "src/middleware/**"
  ]
}
